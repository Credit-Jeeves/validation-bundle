{% extends 'SonataBlockBundle:Block:block_base.html.twig' %}

{% block block %}
    {% for group in groups %}
        <table class="table table-bordered table-striped sonata-ba-list" id="id_table_{{ group.label|lower|replace({' ':'_'}) }}">
            <thead>
                <tr>
                    <th colspan="3">{{ group.label|trans({}, group.label_catalogue) }}</th>
                </tr>
            </thead>

            <tbody>

                {% if _key == 0 and application == 'rj' %}
                    <tr id="block_rental_reports">
                        <td class="sonata-ba-list-label">{{ 'admin.reports'|trans }}</td>
                        <td>
                            <p><a id="block_rental_report" href="{{ url('sonata_admin_rental_report') }}">{{ 'admin.rental_reports'|trans }}</a></p>
                            <p><a id="block_rental_report_transunion" href="{{ url('sonata_admin_rental_report_transunion') }}">{{ 'admin.late_report.transunion.review'|trans }}</a></p>
                            <p><a id="block_rental_report_experian" href="{{ url('sonata_admin_rental_report_experian') }}">{{ 'admin.late_report.experian.review'|trans }}</a></p>
                        </td>
                    </tr>
                {% endif %}

                {% for admin in group.items %}
                    {% if admin.hasroute('create') and admin.isGranted('CREATE') or admin.hasroute('list') and admin.isGranted('LIST') %}
                        <tr id="id_block_{{ admin.label|lower|replace({' ':'_'}) }}">
                            <td class="sonata-ba-list-label">{{ admin.label|trans({}, admin.translationdomain) }}</td>
                            <td>
                                <div class="btn-group">
                                    {% if admin.hasroute('create') and admin.isGranted('CREATE') %}
                                        {% if admin.subClasses is empty %}
                                            <a class="btn btn-small" href="{{ admin.generateUrl('create')}}">
                                                <i class="icon-plus"></i>
                                                {% trans from 'SonataAdminBundle' %}link_add{% endtrans %}
                                            </a>
                                        {% else %}
                                            <a class="btn btn-small dropdown-toggle" data-toggle="dropdown" href="#">
                                                <i class="icon-plus"></i>
                                                {% trans from 'SonataAdminBundle' %}link_add{% endtrans %}
                                                <span class="caret"></span>
                                            </a>
                                            <ul class="dropdown-menu">
                                                {% for subclass in admin.subclasses|keys %}
                                                <li>
                                                    <a href="{{ admin.generateUrl('create', {'subclass': subclass}) }}">{{ subclass }}</a>
                                                </li>
                                                {% endfor %}
                                            </ul>
                                        {% endif %}
                                    {% endif %}
                                    {% if admin.hasroute('list') and admin.isGranted('LIST') %}
                                        <a class="btn btn-small" href="{{ admin.generateUrl('list')}}">
                                            <i class="icon-list"></i>
                                            {% trans from 'SonataAdminBundle' %}link_list{% endtrans -%}
                                        </a>
                                    {% endif %}
                                </div>
                            </td>
                        </tr>
                    {% endif %}
                {% endfor %}
                {% if _key == 0 %}
                    <tr id="block_settings">
                        <td class="sonata-ba-list-label">{{ 'admin.settings'|trans }}</td>
                        <td>
                            <a href="{{ url('admin_settings_edit', {id: '1'}) }}"
                               class="btn edit_link btn-small"
                               title="action_edit">
                                <i class="icon-edit"></i>
                                {% trans from 'SonataAdminBundle' %}action_edit{% endtrans -%}
                            </a>
                        </td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    {% endfor %}
{% endblock %}
