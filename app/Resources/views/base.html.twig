<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}{{ 'project_name'|trans }}{% endblock %}</title>
    {{ render(controller('CoreBundle:Session:js')) }}
    {% stylesheets
        '@CoreBundle/Resources/public/css/main.css'
        '@CoreBundle/Resources/public/css/linkselect.css'
        '@CoreBundle/Resources/public/css/buttons.css'
        '@CoreBundle/Resources/public/css/zebra.css'
        '@CoreBundle/Resources/public/css/lightbox.css'
        '@CoreBundle/Resources/public/css/form.css'
        '@ExperianBundle/Resources/public/css/pidkiq-questions.css'
    %}
        <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />

    {% endstylesheets %}

    {% javascripts
        '@CoreBundle/Resources/public/js/jquery-1.9.1.min.js'
        '@CoreBundle/Resources/public/js/jquery.placeholder.min.js'
        '@CoreBundle/Resources/public/js/jquery.linkselect.min.js'
        '@CoreBundle/Resources/public/js/jquery.ssn.js'
        '@CoreBundle/Resources/public/js/jquery.overlay.js'
        '@CoreBundle/Resources/public/js/jquery.overlay-ext.js'
        '@CoreBundle/Resources/public/js/zebra.js'
        '@CoreBundle/Resources/public/js/lightbox.js'
        '@CoreBundle/Resources/public/js/ReLoader.js'
        '@RjCoreBundle/Resources/public/js/knockout-3.4.0.js'
        '@CoreBundle/Resources/public/js/knockout.mapping-latest.js'
        '@CoreBundle/Resources/public/js/knockout.handlers.js'
        '@CoreBundle/Resources/public/js/knockout.helpers.js'
        '@CoreBundle/Resources/public/js/knockout.datepicker.js'
        '@CoreBundle/Resources/public/js/knockout.dialog.js'
        '@RjCoreBundle/Resources/public/js/knockout.components.js'
        '@CoreBundle/Resources/public/js/common.js'
        '@CoreBundle/Resources/public/js/date.js'
        '@FOSJsRoutingBundle/Resources/public/js/router.js'
        '@CoreBundle/Resources/public/js/jquery.cookie.js'
        '@CoreBundle/Resources/public/js/session.js'
        '@CoreBundle/Resources/public/js/Format.js'
        'bundles/bazingajstranslation/js/translator.min.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% block google_analytics %}
        {% if application == 'rj' %}
            {% include 'RjCoreBundle::google_analytics.html.twig' %}
        {% else %}
            {% include 'CoreBundle::google_analytics.html.twig' %}
        {% endif %}
    {% endblock %}
    {% block head_javascripts %}{% endblock %}
    {% if 'dev' == env %}
        <script type="text/javascript">
            console.debug("Loading js routes and translations dynamically");
        </script>
        <script src="{{ url('bazinga_jstranslation_js', { 'domain': 'messages'}) }}"></script>
        <script src="{{ path('fos_js_routing_js', {"callback": "fos.Router.setData"}) }}"></script>
    {% else %}
        <!-- FIXME: RT-1211 : save ~2.5sec load time if we load static file via assetic -->
        <script src="{{ url('bazinga_jstranslation_js', { 'domain': 'messages'}) }}"></script>
        <script src="/bundles/fosjsrouting/js/{{ application }}_{{ env }}.js"></script>
    {% endif %}
    {% if application == 'rj' %}
        <link href="{{ asset('bundles/core/css/rj-logos.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('bundles/core/css/rj-fix-style.css') }}" rel="stylesheet" type="text/css" />
    {% else %}
        <link href="{{ asset('bundles/core/css/cj-logos.css') }}" rel="stylesheet" type="text/css" />
    {% endif %}
    <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
    {% block stylesheets %}{% endblock %}
    {% block google_api %}{% endblock %}
    <!--[if gte IE 9]>
        <style type="text/css">
            .gradient {
                filter: none;
            }
        </style>
    <![endif]-->
    <!--[if lte IE 8]>
        <link rel="stylesheet" type="text/css" href="{{ asset('bundles/core/css/main-ie-8.css') }}" />
    <![endif]-->
</head>
<body>
    {% block alert %}{% endblock %}
    {% block header %}{% endblock %}
    {% include 'CoreBundle:Lightbox:index.html.twig' only %}
    <div class="header">
        <div class="site-logo"></div>
        <div class="info-block">
            {% block info %}
                {% include '::userLogout.html.twig' %}
            {% endblock %}
        </div>
        <div class="select-entity">
            {% block select %}{% endblock %}
        </div>
        {% block partner_logo %}{% endblock %}
        <div class="clearboth"></div>
        <div class="header-tabs">{% block tabs %}{% endblock %}</div>
    </div>
    <div class="clearboth"></div>
    <div class="section">
    <div class="page-body gradient">
        <div class="page-content page-border">{% block content %}{% endblock %}</div>
    </div>
    </div>
    <div class="footer">
        {% block footer %}{% endblock %}
        {% if application == 'cj' %}
            <div class="experian-logo">
                <span class="experian-data">{{ 'footer.data_provided_by' | trans }}</span><br>
                <img alt="" src="{{ asset('bundles/core/images/logo/experian_sm.png') }}" />
            </div>
        {% endif %}
    </div>
    {% block javascripts %}{% endblock %}
</body>
</html>
