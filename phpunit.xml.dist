<?xml version="1.0" encoding="UTF-8"?>

<!-- http://www.phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit
    backupGlobals               = "false"
    backupStaticAttributes      = "false"
    colors                      = "false"
    convertErrorsToExceptions   = "true"
    convertNoticesToExceptions  = "true"
    convertWarningsToExceptions = "true"
    processIsolation            = "false"
    stopOnFailure               = "false"
    syntaxCheck                 = "false"
    bootstrap                   = "app/bootstrap.php.cache" >

    <testsuites>

        <!--                                  -->
        <!-- Default TestSuite run by Jenkins -->
        <!--                                  -->
        <testsuite name="Project Test Suite">
            <directory suffix="Case.php">vendor/credit-jeeves/api-bundle/CreditJeeves/*/Tests/CreditJeeves</directory>
            <!-- Not pic up this test by reg link -->
            <directory suffix="Case.php">src/RentJeeves/ExternalApiBundle/Tests/Services/*</directory>
            <!-- end -->
            <directory suffix="Case.php">src/*/*Bundle/Tests</directory>
            <directory suffix="Case.php">src/*/*Bundle/Tests/*</directory>
            <directory suffix="Case.php">src/*/Bundle/*Bundle/Tests</directory>
            <directory suffix="Case.php">src/*/Bundle/*Bundle/Tests/*</directory>
            <directory suffix="Case.php">vendor/credit-jeeves/arf-bundle/CreditJeeves/*/Tests</directory>
            <directory suffix="Case.php">vendor/credit-jeeves/core-bundle/CreditJeeves/*/Tests</directory>
            <directory suffix="Case.php">vendor/credit-jeeves/simulation-bundle/CreditJeeves/*/Tests</directory>
            <!--directory suffix="Case.php">vendor/credit-jeeves/*/CreditJeeves/*/Tests/Functional</directory-->
        </testsuite>

        <!--                                  -->
        <!-- Bundle-Specific TestSuites       -->
        <!--                                  -->
        <testsuite name="ExternalApiBundle">
            <directory suffix="Case.php">src/RentJeeves/ExternalApiBundle/Tests/*</directory>
            <directory suffix="Case.php">src/RentJeeves/ExternalApiBundle/Tests/Services/*</directory>
        </testsuite>

    </testsuites>

    <php>
        <server name="KERNEL_DIR" value="app/" />
    </php>

    <filter>
        <whitelist>
            <directory>src</directory>
            <exclude>
                <directory>src/*/*Bundle/Resources</directory>
                <directory>src/*/*Bundle/Tests</directory>
                <directory>src/*/Bundle/*Bundle/Resources</directory>
                <directory>src/*/Bundle/*Bundle/Tests</directory>
            </exclude>
        </whitelist>
    </filter>

</phpunit>
