{% extends "ApplicantBundle::base.html.twig" %}

{% block title "appliant_dashboard_title"|trans %}

{% block header %}
    {% if nLeads > 1 %}
        {{ render(controller('ComponentBundle:Leads:index')) }}
    {% endif %}
{% endblock %}

{% block content %}
    <div class="column-middle floatleft">
        {{ render(controller('ComponentBundle:Score:index', {'Lead': Lead})) }}
    </div>
    <div class="column-small floatright">
        {{ render(controller('ComponentBundle:Goods:index', {'Lead': Lead})) }}
    </div>
    <div class="clearboth"></div>
    <div class="row-20"></div>
    <div class="column-large">
        {% if isSuccess %}
        {{ render(controller('ComponentBundle:Success:index', {'Lead': Lead})) }}
        <div class="row-20"></div>
        {% endif %}
        {{ render(controller('ComponentBundle:Simulation:index')) }}
        <div class="row-20"></div>
        {{ render(controller('ComponentBundle:Incentives:index')) }}
    </div>
    <div class="row-20"></div>
    <div class="column-middle floatleft">
        {{ render(controller('ComponentBundle:AccountStatus:index', {'Report': Report})) }}
    </div>
    <div class="column-small floatright">
        {{ render(controller('ComponentBundle:DidYouKnow:index')) }}
    </div>
    <div class="clearboth"></div>
{% endblock %}

{% block javascripts %}
    {% if nLeads > 1 %}
        <script src="{{ asset('bundles/component/js/leads.js') }}" type="text/javascript"></script>
    {% endif %}
{% endblock %}