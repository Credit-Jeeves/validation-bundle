{% extends "::base.html.twig" %}

{% block title "New Appliant" %}

{% block stylesheets %}
    <link href="{{ asset('bundles/user/css/user.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block tabs %}
{% endblock %}

{% block info %}
<div class="user-logout">
    <a href="{{ path('fos_user_security_login') }}">Â» Log In </a>
</div>
{% endblock %}

{% block content %}
    <div class="column-small floatleft">
        <div class="pod-small pod-border pod-padding shadow">
            <h3>Tailored to You</h3>
            <iframe src="https://player.vimeo.com/video/50397606?title=0&amp;byline=0&amp;portrait=0&amp;color=ffffff&amp;autoplay=false"
                  width="235"
                  height="140"
                  frameborder="0" webkitAllowFullScreen mozallowfullscreen allowFullScreen>
            </iframe>
            <p>Credit Jeeves is a powerful service designed to help you understand, optimize and directly impact your credit score.</p>
        </div>
    </div>
    <div class="column-middle floatright">
        <div class="pod-middle pod-border pod-padding shadow">
            <h1>Welcome to Credit Jeeves.</h1>
            <div class="row-20"></div>
            <h3>Please enter your information below and we can get started right away.</h3>
                <form action="{{ path('applicant_new') }}" method="post" {{ form_enctype(form) }}>
                    {% if form_errors(form) | length > 0 %}
                    <div class="flash-error">
                        {{ form_errors(form) }}
                    </div>
                    {% endif %}
                    <table>
                        {% if form_errors(form.code) | length > 0 %}
                        <tr>
                            <td colspan="2">
                                <div class="flash-error">
                                    {{ form_errors(form.code) }}
                                </div>
                            </td>
                        </tr>
                        {% endif %}
                        <tr>
                            <td>{{ form_label(form.code) }}</td>
                            <td>{{ form_widget(form.code, { 'attr': {'class': 'user-margin'} }) }}</td>
                        </tr>
                        {% include 'ComponentBundle:User:user.html.twig' with { 'form' : form } %}
                        <tr>
                            <td colspan="2">
                                <div class="row-20"></div>
                                <div class="checkbox-anywhere">
                                    {{ form_widget(form.user.tos) }}
                                </div>
                                <div class="user-tos">I have read the <a href="http://www.creditjeeves.com/terms-of-service">Terms of Service</a></div>
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                {{ 'common.applicant.tos' | trans }}
                            </td>
                        </tr>
                    </table>
                    {{ form_rest(form) }}
                    <div class="row-20"></div>
                    <input class="button large green" type="submit" name="_submit" value="Get Score" />
                </form>
        </div>
    </div>
        <div class="clearboth"></div>
{% endblock %}
