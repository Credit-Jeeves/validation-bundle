{% extends "ApplicantBundle::base.html.twig" %}

{% block title "Appliant Dasboard" %}

{% block info %}
<p class="user-email">{{ sEmail }} </p>
<div class="user-logout">
    <a href="{{ path('fos_user_security_logout') }}">» Log out </a>&nbsp;|&nbsp;
    <a href="{{ path('fos_user_security_logout') }}">» Help </a>
</div>
{% endblock %}

{% block content %}
    <div class="column-small floatleft">
        <div class="pod-small pod-border pod-padding shadow">
            <h2>Account Settings</h2>
            {{ knp_menu_render('ApplicantBundle:Builder:settingsMenu', { 'template': 'ApplicantBundle:Menu:applicant_settings.html.twig' }) }}
        </div>
    </div>
    <div class="column-middle floatright">
        <div class="pod-middle pod-border pod-padding shadow">
        <h1>Contact Information</h1>
        <div class="row-20"></div>
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="flash-notice">
                {{ flashMessage }}
            </div>
        {% endfor %}
        <form action="{{ path('applicant_contact') }}" method="post" {{ form_enctype(form) }}>
            {{ form_label(form.phone) }}
            {{ form_widget(form.phone_type, { 'attr': {'class': 'cj-select'} }) }}
            {{ form_widget(form.phone) }}
            {{ form_rest(form) }}
            <div class="row-20"></div>
            <input class="button large green" type="submit" name="_submit" value="Update" />
        </form>
        </div>
    </div>
    <div class="clearboth"></div>
{% endblock %}
