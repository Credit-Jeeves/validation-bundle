{% extends "ApplicantBundle::base.html.twig" %}

{% block title "Appliant Dasboard" %}

{% block stylesheets %}
    <link href="{{ asset('bundles/component/css/components.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/component/css/credit-balance.css') }}" rel="stylesheet" type="text/css" />
    <link href="{{ asset('bundles/component/css/credit-summary.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}

{% block content %}
    <div class="column-large">
        {{ render(controller('ComponentBundle:CreditBalance:index')) }}
        <div class="row-20"></div>
        {{ render(controller('ComponentBundle:CreditSummary:index')) }}
    </div>
    <div class="row-20"></div>
    <div class="column-middle floatleft">
        {{ render(controller('ComponentBundle:CreditCardUtilization:index')) }}
        <div class="row-20"></div>
        {{ render(controller('ComponentBundle:MissedPayments:index')) }}
        <div class="row-20"></div>
        {{ render(controller('ComponentBundle:HardInquiries:index')) }}
        <div class="row-20"></div>
        {{ render(controller('ComponentBundle:LoanTypes:index')) }}
        <div class="row-20"></div>
        {{ render(controller('ComponentBundle:CreditAverageAge:index')) }}
        <div class="row-20"></div>
        {{ render(controller('ComponentBundle:TotalTradelines:index')) }}
    </div>
    <div class="column-small floatright">
        {{ render(controller('ComponentBundle:BuyReport:index')) }}
    </div>
    <div class="clearboth"></div>
{% endblock %}

{% block google_api %}
    <script type="text/javascript" src="https://www.google.com/jsapi"></script>
{% endblock %}