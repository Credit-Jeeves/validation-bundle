<div class="pod-large pod-border pod-padding shadow">
<div class="summary">
    <h3>{{ 'component.credit.summary' | trans }}</h3>
      <div class="datetime floatright">
        {{ sDate }}
      </div>
      <div class="col summary-block zebra-grid">
          <table>
              <tbody>
              <tr>
                  <td>{{ 'account.total' | trans }}:</td>
                  <td>{{ aCreditSummary.total_trade_items_counter }}</td>
              </tr>
              <tr>
                  <td>{{ 'account.good.total' | trans }}:</td>
                  <td>{{ aCreditSummary.satisfactory_accounts }}</td>
              </tr>
              <tr>
                  <td>{{ 'account.negative.total' | trans }}:</td>
                  <td>{{ aCreditSummary.now_delinquentderog_counter }}</td>
              </tr>
              <tr>
                  <td>{{ 'account.negative.historical' | trans }}:</td>
                  <td>{{ aCreditSummary.was_delinquentderog_counter }}</td>
              </tr>
              <tr>
                  <td>{{ 'account.oldest' | trans }}:</td>
                  <td>{{ aCreditSummary.oldest_trade_date }}</td>
              </tr>
              </tbody>
          </table>
      </div>
      <div class="col summary-block zebra-grid">
          <table>
              <tbody>
              <tr>
                  <td>{{ 'payment.monthly.total' | trans }}:</td>
                  <td>${{ aCreditSummary.monthly_payment | number_format() }}</td>
              </tr>
              <tr>
                  <td>{{ 'payment.monthly.estate' | trans }}:</td>
                  <td>${{ aCreditSummary.real_estate_payment | number_format() }}</td>
              </tr>
              <tr>
                  <td>{{ 'payment.auto.total' | trans }}:</td>
                  <td>${{ nAutomotive | number_format() }}</td>
              </tr>
              <tr>
                  <td>{{ 'inquiries.total' | trans }}:</td>
                  <td>{{ aCreditSummary.total_inquiries_counter }}</td>
              </tr>
              </tbody>
          </table>
      </div>
      <div class="col summary-block important zebra-grid">
          <table>
              <tbody>
              <tr class="important">
                  <td>{{ 'derogatory.current' | trans }}:</td>
                  <td>{{ aCreditSummary.now_delinquentderog_counter }}</td>
              </tr>
              <tr class="important">
                  <td>{{ 'derogatory.past' | trans }}:</td>
                  <td>{{ aCreditSummary.was_delinquentderog_counter }}</td>
              </tr>
              <tr class="important">
                  <td>{{ 'past_due.total.amount' | trans }}:</td>
                  <td>${{ aCreditSummary.total_past_due | number_format() }}</td>
              </tr>
              <tr>
                  <td>{{ 'collections.total' | trans }}:</td>
                  <td>{{ aCreditSummary.collections }}</td>
              </tr>
              <tr>
                  <td>{{ 'records.public.total' | trans }}:</td>
                  <td>{{ aCreditSummary.public_records_count }}</td>
              </tr>
              </tbody>
          </table>
      </div>
  </div>
  <div class="clearboth"></div>
</div>

