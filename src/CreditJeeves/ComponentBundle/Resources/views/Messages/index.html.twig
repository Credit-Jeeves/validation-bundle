{% if aMessages | length > 0 %}
<div class="row-20"></div>
<div class="pod-large pod-border pod-padding shadow">
    <div class="summary">
        <h3>{{ 'common.messages' | trans }}</h3>
        {% for sMessage in aMessages %}
        <div class="message">{% autoescape false %}{{ sMessage }}{% endautoescape %}</div>
        {% endfor %}
    </div>
    <div class="clearboth"></div>
</div>
{% endif %}
