<div class="form-row">

    {{ form_errors(form.addresses[0].address1) }}
    {% if form.middle_initial is defined %}
        {{ form_errors(form.addresses[0].address2) }}
    {% endif %}
    {{ form_errors(form.addresses[0].city) }}
    {{ form_errors(form.addresses[0].state) }}
    {{ form_errors(form.addresses[0].zip) }}

    <div class="form-label">{{ form_label(form.addresses[0].address1) }}</div>
    <div class="form-widget">
        <div class="form-line">
        {{ form_widget(
            form.addresses[0].address1,
            { 'attr':
                {
                    'class': 'user-input user-address form-margin',
                    'maxlength' : 255,
                    'placeholder': 'Street'
                }
            })
        }}

        {% if form.middle_initial is defined %}
            {{ form_widget(
                form.addresses[0].address2,
                { 'attr':
                    {
                        'class': 'user-input user-unit form-margin',
                        'placeholder': 'Unit #',
                        'maxlength' : 15
                    }
                })
            }}
        {% endif %}
        </div>
        <div class="form-line">
        {{ form_widget(
            form.addresses[0].city,
            { 'attr':
                {
                    'class': 'user-input user-city form-margin floatleft',
                    'placeholder': 'City',
                    'maxlength' : 255
                }
            })
        }}
        {{ form_widget(
            form.addresses[0].state,
            { 'attr':
                {
                    'class': 'user-input user-state form-margin',
                    'maxlength' : 2
                }
            })
        }}
        {{ form_widget(
            form.addresses[0].zip,
            { 'attr':
                {
                    'class': 'user-input user-unit form-margin',
                    'placeholder': 'ZIP',
                    'maxlength' : 15
                }
            })
        }}        
        </div>
        </div>
</div>
