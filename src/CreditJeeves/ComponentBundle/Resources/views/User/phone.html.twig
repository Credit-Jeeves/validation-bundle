<div class="form-row">
    <div class="form-label">{{ form_label(form.phone) }}</div>
    <div class="form-widget form-line">{{ form_widget(
            form.phone_type,
            { 'attr':
                {
                    'class': 'user-input form-margin floatleft'
                }
            })
        }}
        {{ form_widget(
            form.phone,
            { 'attr':
                {
                    'class': 'user-input user-address form-margin',
                    'placeholder': 'Phone',
                    'maxlength' : 255
                }
            })
        }}</div>
</div>
