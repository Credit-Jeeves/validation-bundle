{% extends "::base.html.twig" %}

{% block title 'common.messages' | trans %}

{% block info %}
{% endblock %}

{% block content %}
    <div class="column-large">
        <div class="pod-large pod-border pod-padding shadow">
            <div class="row-20"></div>
            <h1>{{ 'user.email.verified' | trans }}</h1>
            <div class="row-20"></div>
            <p>{{ 'user.email.thank' | trans }}</p>
            <div class="row-20"></div>
            <p>{{ 'user.email.next' | trans }}</p>
            <div class="row-20"></div>
            <form action="{{ signinUrl }}" method="post">
                <input class="button green small" type="submit" name="_submit" value="{{ 'user.email.signin' | trans }}" />
            </form>
            <div class="row-20"></div>
        </div>
    </div>
    <div class="clearboth"></div>
{% endblock %}

