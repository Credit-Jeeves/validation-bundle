{% extends "::base.html.twig" %}

{% block title 'common.messages' | trans %}

{% block info %}
{% endblock %}

{% block content %}
    <div class="column-large">
        <div class="pod-large pod-border pod-padding shadow">
            <div class="row-20"></div>
            <h1>{{ 'user.email.verify' | trans }}</h1>
            <div class="row-20"></div>
            <p>{{ 'user.email.check' | trans | replace({'%EMAIL%': email})}}</p>
            <div class="row-20"></div>
            <p>{{ 'user.email.see' | trans }}</p>
            <div class="row-20"></div>
            <form method="post">
                <input class="button green small" type="submit" name="_submit" value="{{ 'user.email.again' | trans }}" />
            </form>
            <div class="row-20"></div>
       </div>
    </div>
    <div class="clearboth"></div>
{% endblock %}

