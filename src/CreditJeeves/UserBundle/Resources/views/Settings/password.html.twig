{% extends app.user.type | capitalize ~ "Bundle::base.html.twig" %}

{% block content %}
    <div class="column-small floatleft">
        <div class="pod-small pod-border pod-padding shadow">
            <h2>{{ 'settings.title' | trans }}</h2>
            {{ knp_menu_render(app.user.type | capitalize ~ 'Bundle:Builder:settingsMenu', { 'template': '::menu.html.twig' }) }}
        </div>
    </div>
    <div class="column-middle floatright">
        <div class="pod-middle pod-border pod-padding shadow">
        <h1>{{ 'settings.password' | trans }}</h1>
                {% for flashMessage in app.session.flashbag.get('notice') %}
                    <div class="flash-notice">
                        {{ flashMessage }}
                    </div>
                {% endfor %}
                <form action="" id="resetting_password" method="post" {{ form_enctype(form) }}>
                    {{ form_errors(form) }}
                    <fieldset>
                        {% include 'ComponentBundle:User:password_old.html.twig'     with { 'form' : form } %}
                        <div class="clearboth"></div>
                        <div class="row-20"></div>
                        {% include 'ComponentBundle:User:password_new.html.twig'     with { 'form' : form } %}
                        {{ form_rest(form) }}
                        <div class="clearboth"></div>
                        <div class="row-20"></div>
                        <input class="button large green" type="submit" name="_submit" value="{{ 'common.update' | trans }}" />
                    </fieldset>
                </form>
        </div>
    </div>
    <div class="clearboth"></div>
{% endblock %}
