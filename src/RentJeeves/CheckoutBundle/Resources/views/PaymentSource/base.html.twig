<div data-bind="visible: paymentAccounts().length > 0" class="form-row clearfix exist-sources-block">
    <label>{{ 'payment.account' | trans }}*</label>
    <div class="fields-box payment-accounts">
        <small data-bind="visible: !isNewPaymentAccount()"><b>*</b>{{ 'required' | trans }}</small>
        <!-- ko foreach: paymentAccounts -->
        <label class="checkbox radio" style="clear: left;">
            <input type="radio"
                   required="required"
                   data-bind="
                                value: $data.id,
                                checked: $root.currentPaymentAccountId
                            " />
            <i></i>
            <span data-bind="html: $data.fullname"></span>
        </label>
        <!-- /ko -->
        {% if isLocked == false %}
        <div class="fields-box" data-bind="visible: !isNewPaymentAccount()">
            <a href="#" data-bind="click: addNewPaymentAccount" class="checkout-plus">
                <span></span>{{ 'payment.account.new' | trans }}
            </a>
        </div>
        {% endif %}
    </div>
</div>
<div data-bind="visible: isNewPaymentAccount()">
    {% if form_name_suffix is defined %}
        {{ render(controller('RjCheckoutBundle:PaymentSource:source', {'formNameSuffix' : form_name_suffix})) }}
    {% else %}
        {{ render(controller('RjCheckoutBundle:PaymentSource:source')) }}
    {% endif %}
    {% if not allow_payment_account_fee_dispay %}
    <p class="note" data-bind="visible: getFee">
        <strong data-bind="text: getFeeNote"></strong>
        <i data-bind="attr: {'title': getFeeNoteHelp}" class="help after-checkbox pie-el tooltip-link">
            ?
        </i>
    </p>
    {% endif %}
</div>
