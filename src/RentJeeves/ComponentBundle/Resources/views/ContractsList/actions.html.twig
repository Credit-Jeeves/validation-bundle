<div id="contract-resolve">
    <!-- Resolve Popup Late -->
    <div id="contract-resolve-late" class="pricing-popup dashboard-popup properties-popup">
        <h1>{{ 'conflict.resolve.title' | trans() }}</h1>
        <div class="clearfix halfs-box">
            {% include 'RjComponentBundle:ContractsList:_tenantInfoBlock.html.twig' %}
            <div class="half-box right">
                <h4>{{ 'conflict.resolve.options' | trans() }}</h4>
                <ul class="type_checkbox">
                    <li>
                        <label class="checkbox radio">
                            <input type="radio" name="ResolutionOptions" title="email" checked>
                            <i></i>
                            <span>{{ 'conflict.resolve.email' | trans() }}</span>
                        </label>
                        <div class="row-10"></div>
                    </li>
                    <li>
                        <label class="checkbox radio">
                            <input type="radio" name="ResolutionOptions" title="paid">
                            <i></i>
                            <span>{{ 'conflict.resolve.paid' | trans() }}</span>
                        </label>
                        <div class="row-10"></div>
                    </li>
                    <li>
                        <div class="amount-paid-label floatleft">{{ 'contract.paid.cash' | trans }}</div>
                        <div class="amount-paid-input floatleft"><input type="text" id="amount-paid"></div>
                        <div class="clearboth"></div>
                    </li>
                    <li>
                        <div class="row-10"></div>
                        {{ 'contract.resolve.warning' | trans }}
                    </li>
                </ul>
            </div>
        </div>
        <div class="clearfix col-box" id="blockPopupEditProperty" style="display: block;">
            <div class="footer-button-box">
                <button class="button buttonFix" data-bind="click: resolve">
                    <span>{{ 'conflict.resolve.action' | trans() }}</span>
                </button>
                <button class="button grey buttonFix" data-bind="click: closeForm">
                    <span>{{ 'cancel' | trans() }}</span>
                </button>
            </div>
        </div>
    </div>
    <!-- End Resolve Popup Late -->

    <!-- Resolve Popup Ended -->
    <div id="contract-resolve-ended" class="pricing-popup dashboard-popup properties-popup">
        <h1>{{ 'conflict.resolve.ended' | trans() }}</h1>
        <div class="clearfix halfs-box">
            <div class="attention-box pie-el" data-bind="visible: countErrorsEnded() > 0">
                <h3>{{ 'pay_popup.errors.title'|trans }}</h3>
                <ul class="default" data-bind="foreach: $root.errorsEnded">
                    <li data-bind="text: $data"></li>
                </ul>
            </div>
            <div class="row-20"></div>
            {% include 'RjComponentBundle:ContractsList:_tenantInfoBlock.html.twig' %}
            <div class="half-box right">
                <h4>{{ 'conflict.resolve.options' | trans() }}</h4>
                <ul class="type_checkbox">
                    <li>
                        <label class="checkbox radio">
                            <input type="radio" name="ResolutionOptionsEnded" value="monthToMonth" data-bind="checked: resolutionOptionsEnded" title='{{ 'month.to.month'|trans }}' checked>
                            <i></i>
                            <span>{{ 'month.to.month' | trans() }}</span>
                        </label>
                        <div class="row-10"></div>
                    </li>
                    <li class="resolutionRadio">
                        <label class="checkbox radio">
                            <input type="radio" name="ResolutionOptionsEnded" value="changeDate" data-bind="checked: resolutionOptionsEnded"  title='{{ 'change.end.date'|trans()  }}'>
                            <i></i>
                            <span>{{ 'change.end.date' | trans() }}</span>
                            <div class="clearboth"></div>
                            <div class="input-end-contract floatleft">
                                <input type="text" name="endDate" class="half-of-right datepicker" placeholder="mm/dd/YYYY" value="" data-bind="value: endedContractDate" />
                            </div>
                        </label>
                        <div class="row-20"></div>
                    </li>
                    <li class="resolutionRadio">
                        <label class="checkbox radio">
                            <input type="radio" name="ResolutionOptionsEnded" value="markFinished" data-bind="checked: resolutionOptionsEnded"  title='{{ 'mark.as.finished' | trans }}'>
                            <i></i>
                            <span>{{ 'mark.as.finished' | trans }}</span>
                            <div class="clearboth"></div>
                            <div class="input-end-contract floatleft">
                                <input type="text" value="" data-bind="value: outstandingBalance" class="half-of-right">
                            </div>
                        </label>
                        <div class="row-20"></div>
                    </li>
                    <li>
                        <div class="row-20"></div>
                        {{ 'outstanding.description' | trans }}
                    </li>
                </ul>
            </div>
        </div>
        <div class="clearfix col-box">
            <div class="footer-button-box">
                <button class="button buttonFix" data-bind="click: resolveEnded">
                    <span>{{ 'conflict.resolve.action' | trans() }}</span>
                </button>
                <button class="button grey buttonFix" data-bind="click: closeFormEnded">
                    <span>{{ 'cancel' | trans() }}</span>
                </button>
            </div>
        </div>
    </div>
    <!-- End Resolve Popup Ended -->
</div>
<div id="actions-block" class="landrord-box contracts-block">
    <div class="title-box clearfix">
      <h2 data-bind="text: '{{'action.required'|trans}} (' + $root.total() + ')'"></h2>
      <div class="fiter-box">
        <label>{{ 'filter.by'|trans }}</label>
        <select id="searchActions"class="select custom-select blue-arrow selectBox">
            <option value="property">{{ 'property'|trans }}</option>
            <option value="tenant">{{ 'tenant'|trans }}</option>
            <option value="amount">{{ 'amount'|trans }}</option>
        </select>
        <div class="finder-box">
          <input type="text" id="searsh-field-actions" name="searsh-field" data-bind="value: searchText">
          <a href="#" style="display:block;" data-bind="click: clearSearch, style: { visibility: isSearch() ? 'visible': 'hidden' }" id="delete" class="pie-el">x</a>
          <button type="submit" id="search-submit" data-bind="click: search" class="pie-el">{{ 'search' }}</button>
        </div>
      </div>
    </div>
    <div class="content-box">
      <div class="properties-table-block table-wrap">
        <div class="table-margin">
          <table class="properties-table zebra-grid"
          data-bind="style: { display: processActions() ? 'none ' :  'table' }"
            style="display:none;"
          >
            <thead>
              <tr class="properties-th">
                <th class="pie-el" colspan="2">
                  <span class="sort" id="statusA" data-bind="click: sortIt" >{{ 'filter.status'|trans }}<i> </i></span>
                </th>
                <th class="pie-el">
                  <span class="sort"  id="due_dateA" data-bind="click: sortIt">{{ 'paid_to'|trans }}<i> </i>
                  </span>
                </th>
                <th class="pie-el">
                  <span class="sort" id="propertyA" data-bind="click: sortIt">{{ 'property'|trans }}<i> </i>
                  </span>
                </th>
                <th class="pie-el">
                  <span id="tenantA" data-bind="click: sortIt" class="sort">{{ 'tenant'|trans }}<i> </i>
                  </span>
                </th>
                <th class="pie-el">
                  <span  id="amountA" data-bind="click: sortIt" class="sort">{{ 'amount'|trans }}<i> </i>
                  </span>
                </th>
              </tr>
            </thead>
            <tbody>
            <!-- ko if: countActions -->
              <!-- ko foreach: { data: aActions } -->
              <tr>
                <td class="actions-status" data-bind="text: status, attr: {'class': 'actions-status '+style}"></td>
                <td class="action-box">
                  <a href="#" class="action-alert pie-el"  data-bind="click: $root.Resolve">
                    <i> </i>{{'resolve'|trans|upper}}
                  </a>
                </td>
                <td data-bind="text: late_date"></td>
                <td data-bind="text: address"></td>
                <td data-bind="text: tenant"></td>
                <td data-bind="text: amount"></td>
              </tr>
              <!-- /ko -->
              <!-- /ko -->
            </tbody>
          </table>
              <!-- ko if: notHaveResult()  -->
              <div class="no-data-row">
                    <h3 class="notHaveData">{{ 'donthavedata'|trans }}</h3>
                    </div>
              <!-- /ko -->

          <img src="/bundles/core/images/img_loading.gif" class="processPayment" data-bind="style: { display: processActions() ? 'block' : 'none' }">
        </div>
      </div>
    </div>
    <div class="clearboth"></div>
    <!-- ko if: pages().length -->
    <nav class="pagination-box floatright">
        <ul>
            <!-- ko foreach: pages() -->
                <!-- ko if: $data == $root.current() -->
                <li><span data-bind="click: $root.goToPage, text: $data" class="pagePagination"></span></li>
                <!-- /ko -->
                <!-- ko ifnot: $data == $root.current() -->
                <li><a href="#" data-bind="click: $root.goToPage, text: $data" class="pagePagination"></a></li>
                <!-- /ko -->
            <!-- /ko -->
        </ul>
    </nav>
    <!-- /ko -->
    <div class="clearboth"></div>
    <div class="row-20"></div>
    <!-- /ko -->
</div>
