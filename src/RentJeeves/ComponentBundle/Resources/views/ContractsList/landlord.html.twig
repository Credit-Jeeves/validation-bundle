<div id="contract-actions">
    <!-- Action Edit -->
    <div id="contract-edit" class="units-wrapper" style="visibility: hidden;" data-bind="style: { visibility: edit() ? 'visible' : 'hidden' }">
        <div class="units-background"></div>
        <div  class="units-block border" data-bind="style: { top: marginTop + 'px' }">
            <h1>Edit Tenant Information</h1>
            <div class="border contract-hint">
                This pending tenant is awaiting your approval
            </div>
            <div  data-bind="with: contract">
                <div><b>Tenant Information</b></div>
                <table class="contract-details">
                    <tbody>
                        <tr>
                            <td width="25%">Name:</td>
                            <td>
                                <input class="contract-first" type="text" data-bind="value: first_name">
                                <input class="contract-last" type="text" data-bind="value: last_name">
                            </td>
                        </tr>
                        <tr>
                            <td>Address:</td>
                            <td data-bind="text: address"></td>
                        </tr>
                        <tr>
                            <td>Phone:</td>
                            <td>
                                <input type="text"  data-bind="value: phone">
                            </td>
                        </tr>
                        <tr>
                            <td>Email:</td>
                            <td>
                                <input type="text"  data-bind="value: email">
                            </td>
                        </tr>
                    </tbody>
                </table>
                <div><b>Request Payment</b></div>
                <table class="contract-details">
                    <tbody>
                        <tr>
                            <td width="25%">Amount:</td>
                            <td>
                                <input class="contract-input" type="text"  data-bind="value: amount">
                            </td>
                            <td width="25%">Due:</td>
                            <td>
                                <input class="contract-input" type="text" data-bind="value: due_day">
                            </td>
                        </tr>
                        <tr>
                            <td>Start:</td>
                            <td>
                                <input class="contract-input" id="contract-edit-start" type="text"  data-bind="value: start">
                            </td>
                            <td width="25%">End:</td>
                            <td>
                                <input id="contract-edit-finish" class="contract-input" type="text"  data-bind="value: finish">
                            </td>
                        </tr>
                    </tbody>
                </table>
                </div>
            <div class="clearboth"></div>
            <div class="units-footer">
                <div class="btn orange floatleft" data-bind="click: saveContract">Save Changes</div>
                <div class="btn sky floatleft" data-bind="click: clearDetails">Cancel</div>
                <div class="contract-remove floatleft" data-bind="click: removeTenant">Remove Tenant</div>
            </div>
        </div>
    </div>
    <!-- Action Review -->
    <div id="contract-review" class="units-wrapper" style="visibility: hidden;" data-bind="style: { visibility: review() ? 'visible' : 'hidden' }">
        <div class="units-background"></div>
        <div  class="units-block border" data-bind="style: { top: marginTop + 'px' }">
            <div data-bind="with: contract">
                <div data-bind="text: status"></div>
            </div>
            <div class="clearboth"></div>
            <div class="units-footer">
                <div class="btn orange floatleft" data-bind="click: saveContract">Save</div>
                <div class="btn sky floatleft" data-bind="click: clearDetails">Cancel</div>
                
            </div>
        </div>
    </div>
    
    <!-- Action Invite -->
    <div id="contract-invite" class="units-wrapper" style="visibility: hidden;" data-bind="style: { visibility: invite() ? 'visible' : 'hidden' }">
        <div class="units-background"></div>
        <div  class="units-block border" data-bind="style: { top: marginTop + 'px'}">
            <h1>Approve Tenant Information</h1>
            <div class="border contract-hint">
                This pending tenant is awaiting your approval
            </div>
            <div  data-bind="with: contract">
                <div><b>Tenant Information</b></div>
                <table class="contract-details">
                    <tbody>
                        <tr>
                            <td width="25%">Name:</td>
