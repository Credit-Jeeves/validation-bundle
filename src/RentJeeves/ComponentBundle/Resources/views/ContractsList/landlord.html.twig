                            <td width="25%">End:</td>
                            <td data-bind="text: finish">
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="clearboth"></div>
            <div class="units-footer">
                <div class="btn orange floatleft" data-bind="click: approveSave">Approve Tenant</div>
                <div class="btn orange floatleft" data-bind="click: editContract">Edit Info</div>
                <div class="btn grey floatleft" data-bind="click: clearDetails">Close</div>
            </div>
        </div>
    </div>
</div>


    <div id="contracts-block" class="contracts-block">
        <div class="">
            <div class="units-total floatleft"><h2 data-bind="text: 'Rent Total (' + $root.total() + ')'"></h2></div>
            <div class="btn orange floatright" data-bind="click: $root.addTenant">Add Tenant</div>
        </div>
        <div class="clearboth"></div>
        <!-- ko if: pages().length -->
        <div class="">
            <!-- ko foreach: pages() -->
                <!-- ko if: $data == $root.current() -->
                <div class="btn grey floatleft" data-bind="click: $root.goToPage, text: $data"></div>
                <!-- /ko -->
                <!-- ko ifnot: $data == $root.current() -->
                <div class="btn green floatleft" data-bind="click: $root.goToPage, text: $data"></div>
                <!-- /ko -->
            <!-- /ko -->
        </div>
        <!-- /ko -->
        <div class="clearboth"></div>
        <div class="properties-table-block">
            <!-- ko if: countContracts() -->
            <table class="properties-table zebra-grid">
                <thead>
                <tr class="properties-th">
                    <th>Status</th>
                    <th>Tenant</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Property</th>
                    <th>Amount</th>
                    <th>Due Day</th>
                    <th>Paid To</th>
                    <th>Type</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                <!-- ko foreach: { data: aContracts() } -->
                <tr>
                    <td data-bind="attr: {'class': style}">
                        <div data-bind="text: status"></div>
                    </td>
                    <td data-bind="text: tenant"></td>
                    <td data-bind="text: email"></td>
                    <td data-bind="text: phone"></td>
                    <td data-bind="text: address, event: { dblclick: $root.filterAddress }"></td>
                    <td data-bind="text: amount"></td>
                    <td data-bind="text: due_day"></td>
                    <td data-bind="text: paid_to"></td>
                    <td></td>
                    <td align="center">
                        <!-- ko if: 'CURRENT' == status -->
                        <div class="btn green property-edit" data-bind="click: $root.editContract, attr:{'id': 'edit-' + id}">Edit</div>
                        <!-- /ko -->
                        <!-- ko if: 'PENDING' == status -->
                        <div class="btn green property-edit" data-bind="click: $root.approveContract, attr:{'id': 'edit-' + id}">Approve</div>
                        <!-- /ko -->
                        <!-- ko ifnot: 'PENDING' == status || 'CURRENT' == status -->
                        <div class="btn green property-edit" data-bind="click: $root.reviewContract, attr:{'id': 'edit-' + id}">Review</div>
                        <!-- /ko -->
                        
                        
                    </td>
                </tr>
                <!-- /ko -->
                </tbody>
            </table>
            <!-- /ko -->
        </div>
        <div class="clearboth"></div>
    </div>
