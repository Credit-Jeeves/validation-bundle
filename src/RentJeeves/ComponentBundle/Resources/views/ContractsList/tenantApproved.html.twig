<div class="pod-large pod-border pod-padding shadow">
    <h1>Current Pyments</h1>
    <table class="listOfPayments">
        <thead>
            <tr>
                <th class="address">Address</th>
                <th class="payTo">Pay To</th>
                <th class="status">Amount</th>
                <th class="action" colspan="2">Next Due Date</th>
            </tr>
        </thead>
    <tbody>
    {% for contract in contracts %}
        <tr>
            <td>
                {{ contract.property.fullAddress }}
                {% if contract.unit %}
                    <span>{{ contract.unit }}</span>
                {% else %}
                    <span>{{ contract.search }}</span>
                {% endif %}
            </td>
            <td>
                {{ contract.holding }}<br />
                {{ contract.group }}
            </td>
            <td>
                {{ contract.rent }}
            </td>
            <td>
                {{ contract.dueDay }}th
            </td>
            <td>
                <center>
                    <button class="button small">
                        <span>Set Up Your First Rental Payment</span>
                    </button>
                </center>
            </td>
        </tr>
    {% endfor %}
    </tbody>
    </table>
</div>
