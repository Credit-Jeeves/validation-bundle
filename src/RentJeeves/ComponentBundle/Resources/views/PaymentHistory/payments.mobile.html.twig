{% for contract in contracts %}
    <div data-role="page" class="paymentHistoryPage" id="paymentHistory{{ contract.id }}">

        <div data-role="header" role="banner" class="ui-header ui-bar-inherit" style="">
            <a href="#contract{{ contract.id }}" class="headerButton ui-btn-left" data-transition="slide" data-direction="reverse" data-role="none" role="none" style="background: transparent; color: white;">Back</a>
            <h1 class="ui-title" role="heading" aria-level="1">History</h1>
        </div>

        <div class="ui-content" role="main">
            <span class="loadingPaymentHistory">Loading...</span>
            <table data-role="none" class="paymentHistoryTable" id="paymentHistoryTableI{{ contract.id }}">

            </table>
        </div>

    </div>
{% endfor %}

<div data-role="page" class="paymentHistoryPage" id="paymentHistory">

    <div data-role="panel" id="panelH" class="sideMenu">
        <ul data-role="listview">
            <li><a href="#main" class="menuOptions">Current Payments</a></li>
            <li><a href="#paymentHistory" class="menuOptions"  class="selectedMenuOption">Payment History</a></li>
            <li><a href="logout" class="menuOptions">Logout</a></li>
        </ul>
    </div>

    <div data-role="header" role="banner" class="ui-header ui-bar-inherit" style="">
        <a href="#panelH" class="headerButton" data-role="none"><i class="fa fa-bars" style="background: none; color: white; font-size: 22pt;"></i></a>
        <h1 class="ui-title" role="heading" aria-level="1"><img class="headerLogo" src="/bundles/rjcore/images/mobile/home-logo.png"></h1>
    </div>

    <div class="ui-content" role="main">
        <div class="mainHeader">Payment History</div>
        <br/>
        <span class="loadingPaymentHistory">Loading...</span>
        {% for contract in contracts %}

        <table data-role="none" class="paymentHistoryTable" id="paymentHistoryTable{{ contract.id }}">

        </table><br>
        {% endfor %}
        <br><br>

    </div>
</div>

<script>
    //retrieve payment history for each contract using existing AJAX
    $(document).ready(function(){
        $.each([{% for contract in contracts %}{{ contract.id }},{% endfor %}],function(i,id){
            getHistory(id)
        })
    })
</script>
