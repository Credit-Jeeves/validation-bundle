<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="project.mailer.class">RentJeeves\CoreBundle\Mailer\Mailer</parameter>
    </parameters>
    <services>
        <service id="project.mailer" class="%project.mailer.class%">
            <argument type="service" id="service_container" />
            <argument type="service" id="fp_badaboom.exception_catcher" />
        </service>
        <service id="tenant.event_listener.doctrine" class="RentJeeves\DataBundle\EventListener\TenantListener">
            <call method="setRequest">
                <argument
                    type="service"
                    id="request"
                    on-invalid="null"
                    strict="false"
                />
            </call>
            <call method="setTuReporting">
                <argument
                        type="service"
                        id="contract.trans_union_reporting"
                />
            </call>
            <tag name="doctrine.event_listener" event="prePersist" method="prePersist"/>
            <tag name="doctrine.event_listener" event="preUpdate" method="preUpdate"/>
        </service>

        <service id="fixed_date_time" class="JMS\Serializer\Handler\DateHandler">
            <tag name="jms_serializer.handler" type="RentJeeves\CoreBundle\DateTime" direction="serialization"
                 format="json" method="serializeDateTime" />
        </service>
    </services>
</container>
