{% extends "LandlordBundle::base.html.twig" %}
{% form_theme form 'RjCoreBundle::form.html.twig' %}

{% block content %}
<div class="sub-menu">
    {{ knp_menu_render('LandlordBundle:Builder:accountingMenu', { 'template': '::menu.html.twig' }) }}
</div>
<div class="container-content">
    <div id="action_plan_page">
        <div class="column-middle floatleft">
            <div class="pod-middle pod-border pod-padding shadow">
            {{
                include(
                    'LandlordBundle:Accounting:importSteps.html.twig',
                    {
                        'step': 'step1',
                    }
                )
            }}
            <br />
            <br />
            <form action="{{ path('accounting_import_file')}}" method="post" {{ form_enctype(form) }} id="importFile" >
                {{ form_widget(form) }}
                <button type="submit" class="button small submitImportFile">
                    <span>
                        {{ 'next'|trans }}
                    </span>
                </button>
            </form>
            </div>
        </div>
        <div class="clear"></div>
    </div>
</div>
    <script type="text/javascript">
        var importFile = new importFile();
        $(document).ready(function() {
            ko.applyBindings(importFile, $('#action_plan_page').get(0));
            importFile.source("{{ source }}");
        });
    </script>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets '@LandlordBundle/Resources/public/css/submenu.css'
                   '@LandlordBundle/Resources/public/css/stepImport.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
{% block head_javascripts %}
    {{ parent() }}
    {% javascripts
        '@LandlordBundle/Resources/public/js/importFile.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}