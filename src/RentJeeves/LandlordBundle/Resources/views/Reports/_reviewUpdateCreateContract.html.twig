{% form_theme form "RjCoreBundle::form.html.twig" %}

<tr data-bind="if: !isSkipped && ((Tenant.contracts[0].id && Tenant.contracts[0].status !== 'finished') || (!Tenant.contracts[0].id && Tenant.id)), attr:{class:'line'}">
    {{ form_start(form) }}
    <td data-bind="text: $root.getStatusText($data)"></td>
    <td data-bind="text:Tenant.contracts[0].unit.name"></td>
    <td data-bind="text:Tenant.resident_id"></td>
    <td data-bind="text:Tenant.first_name"></td>
    <td data-bind="text:Tenant.last_name"></td>
    <td data-bind="text:Tenant.email"></td>
    <td>
        {{
            form_widget(
                form.rent,
                {"attr": {"id": "", "data-bind": "value: Tenant.contracts[0].rent, attr: {'class': number+'_rent'}"}}
            )
        }}
        {{ form_widget(
            form.imported_balance,
            {
                "attr":
                {"id": "", "data-bind": "value: Tenant.contracts[0].imported_balance, attr: {'class': number+'_balance'}"}
            }
        ) }}
    </td>
    <td>
        {{ form_widget(
            form.startAt,
            {
                "attr":
                {"id": "", "data-bind": "value:$root.formatDate(Tenant.contracts[0].startAt), attr: {'class': number+'_startAt'}"}
            }
        ) }}
        {{ form_widget(
            form.finishAt,
            {
                "attr":
                {"id": "", "data-bind": "value: $root.formatDate(Tenant.contracts[0].finishAt), attr: {'class': number+'_finishAt'}"}
            }
        ) }}
    </td>
    <td>
    </td>
    <td>
    </td>
    {{ form_widget(form._token, {"attr": {"id": "","data-bind": "value: csrfToken, attr: {'class': number+'_token'}"}}) }}
    {{ form_end(form) }}
</tr>
