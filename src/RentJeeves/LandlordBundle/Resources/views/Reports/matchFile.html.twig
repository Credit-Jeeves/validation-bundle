{% extends "LandlordBundle::base.html.twig" %}
{# form_theme form 'RjCoreBundle::form.html.twig' #}

{% block content %}
    <div class="sub-menu">
        {{ knp_menu_render('LandlordBundle:Builder:accountingMenu', { 'template': '::menu.html.twig' }) }}
    </div>
    <div class="container-content">
        <div id="action_plan_page">
            <div class="column-middle floatleft">
                <div class="pod-middle pod-border pod-padding shadow">
                    {{
                    include(
                    'LandlordBundle:Reports:importSteps.html.twig',
                        {
                        'step': 'step2',
                        }
                    )
                    }}
                    <br />
                    <br />
                    {% if error %}
                        <ul class="error_list">
                            <li>{{ error|trans }}</li>
                        </ul>
                    {% else %}
                        {{
                        include(
                        'LandlordBundle:Reports:matchFileTable.html.twig',
                            {
                                'data': data,
                                'form': '',
                            }
                        )
                        }}
                    {% endif %}
                    <br />
                    <br />
                    <div class="button-box">
                        <a href="{{ path("landlord_reports_import") }}" class="button small fixed next grey prev">
                            <span>{{ 'pay_popup.step.previous'|trans }}</span>
                        </a>
                        {% if error  == false %}
                            <button type="submit" class="button small submitImportFile">
                                <span>
                                    {{ 'next'|trans }}
                                </span>
                            </button>
                        {% endif  %}
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {% stylesheets
                    '@LandlordBundle/Resources/public/css/submenu.css'
                    '@LandlordBundle/Resources/public/css/stepImport.css'
    %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
