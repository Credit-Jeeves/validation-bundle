{% endblock %}

{% block tabs %}
        <div class="top-nav">
    {{ knp_menu_render('LandlordBundle:Builder:mainMenu', { 'template': 'CoreBundle:Menu:user_tabs.html.twig' }) }}
    </div>
    
{% endblock %}

{% block footer %}
    {{ render(controller('RjComponentBundle:Footer:index')) }}
{% endblock %}

{% block javascripts %}
    {% javascripts  '@CoreBundle/Resources/public/js/less.min.js'
                    '@CoreBundle/Resources/public/js/datepicker.js'
                    '@ComponentBundle/Resources/public/js/groups.js'

    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

