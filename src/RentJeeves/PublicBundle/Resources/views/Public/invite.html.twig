{% extends "RjPublicBundle::base.html.twig" %}


{% block content %}
<section class="form-content">
  <div class="box type1">
    <h3 class="clearfix">
      <span>{{ 'property.info'|trans }}</span>
      <small><b>*</b>{{ 'required'|trans }}</small>
    </h3>
              
    <div class="col-box clearfix">
      <div class="col">
      <h4>{{ 'property.add'|trans }}</h4>
      <form action="#" name="searchRentalsForm" id="formSearch">
        <div class="search-box pie-el">
          <label for="searsh-field">{{ 'verify.rental'|trans }}</label>
          <div class="clearfix">
            <input type="text" id="property-search" name="searsh-field" value="{{ address }}">
            <a href="#" id="delete" class="pie-el">x</a>
            <button type="submit" id="search-submit" class="pie-el">{{ 'search'|trans }}</button>
          </div>
          <div id="map-canvas"></div>
        </div>
      </div>
    </div>
  </div>
</form>
<form action="{{ path('iframe_invite', {"propertyId": propertyId }) }}" method="post" {{ form_enctype(form) }} id="inviteForm">
    <div class="box type1 pd1">
      <div class="col-box clearfix">
        <div class="col">
          <h4 class="active">{{'didnotfind'|trans}}</h4>
          {{ form_errors(form.invite) }}
          <div class="form-row clearfix">
            {{ form_label(form.invite.unit) }}
            <div class="fields-box">
              {{ form_widget(form.invite.unit, { 'attr': {'class': 'half-width', 'placeholder':"e.g. 3–ê" } }) }}
              {{ form_errors(form.invite.unit) }}
            </div>
          </div>
          <div class="form-row clearfix">
            {{ form_label(form.invite.first_name) }}
            <div class="fields-box">
              {{ form_widget(form.invite.first_name, { 'attr': {'class': 'half-width', 'placeholder':"first" } }) }}
              {{ form_widget(form.invite.last_name, { 'attr': {'class': 'half-width', 'placeholder':"last"} }) }}
              {{ form_errors(form.invite.first_name) }}
              {{ form_errors(form.invite.last_name) }}
            </div>
          </div>
          <div class="form-row clearfix">
            {{ form_label(form.invite.phone) }}
            <div class="fields-box">
                {{ form_widget(form.invite.phone) }}
                {{ form_errors(form.invite.phone) }}
            </div>
          </div>
          <div class="form-row clearfix">
            {{ form_label(form.invite.email) }}
            <div class="fields-box">
                {{ form_widget(form.invite.email) }}
                {{ form_errors(form.invite.email) }}
            </div>
          </div>
          
          <div class="tooltip-box with-header pie-el">
            <h4>{{'keep.paying'|trans}}</h4>
            <p>
                {{ 'keep.paying.text'|trans }}
            </p>
          </div>
        </div>
      </div>
    </div>
    <br />
    {{ include('RjPublicBundle:Public:_formTenant.html.twig', {"form": form.tenant}) }}
    {{ form_rest(form) }}
    <div class="buttons-box clearfix">
      <div class="buttons left">
        <button type="submit" class="button" id="submitForm"><span>{{ 'continue'|trans }}</span></button>
      </div>
    </div>
</form>
</section>
{% endblock %}

{% block javascripts %}
    {{ include('RjComponentBundle:Google:js.html.twig') }}
    {% javascripts  '@RjPublicBundle/Resources/public/js/invite.js'

    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}

