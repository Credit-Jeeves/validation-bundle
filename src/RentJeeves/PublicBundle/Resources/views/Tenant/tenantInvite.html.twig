{% extends "RjPublicBundle::base.html.twig" %}

{% form_theme form ':Form:form_errors.html.twig' %}

{% block content %}
{{ include('RjComponentBundle:Invite:_popupTenant.html.twig') }}
<section class="form-content">
<form action="{{ path('tenant_invite', {'code': code }) }}" method="post" {{ form_enctype(form) }} id="tenantInviteRegister" >
    <div class="box type1">
      {{ include('RjPublicBundle:Public:_formTenant.html.twig', {
            "form": form,
            "isImported": isImported,
            "inviteCodeTenant": code
      }) }}
    </div>
    <div class="buttons-box clearfix">
      <div class="buttons left">
        <button id="submitForm" type="submit" class="button"><span>{{ 'continue'|trans }}</span></button>
      </div>
    </div>
    <div style="display:none;">
        {{ form_rest(form) }}
    </div>
  </form>
</section>
{% endblock %}

{% block javascripts %}
    {% javascripts  '@RjPublicBundle/Resources/public/js/invite-tenant.js'

    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}


{% block stylesheets %}
    {% stylesheets '@RjPublicBundle/Resources/public/css/tenant/invite.css'
    %}
      <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}