{% extends "TenantBundle::base.html.twig" %}

{% block content %}
    <div id="rent-menu">
        {{ knp_menu_render('TenantBundle:Builder:rentMenu', {'template': 'CoreBundle:Menu:user_rent.html.twig'}) }}
    </div>
    <div class="row-20"></div>
        {{ render(controller('RjComponentBundle:ContractsList:tenant')) }}
    <div class="row-20"></div>
    {% if reporting > 0 %}
        {{ render(controller('RjComponentBundle:PaymentHistory:index', {'user': user, 'short': 'true'})) }}
    {% else %}
        {{ render(controller('TenantBundle:Index:info')) }}
    {% endif %}
{% endblock %}

{% block javascripts %}
    {% javascripts 
        '@RjCoreBundle/Resources/public/js/jquery-ui.js'
        '@RjComponentBundle/Resources/public/js/tenant-contracts.js'
    %}
    <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
