{% extends "TenantBundle::base.html.twig" %}

{% form_theme form ':Form:form_errors.html.twig' %}

{% block content %}
<section class="form-content">
{{ include('RjComponentBundle:Invite:_formSearch.html.twig') }}
<div class="errorsGoogleSearch"></div>
<form action="{{ path('tenant_invite_landlord', {"propertyId": property.id }) }}" method="post" {{ form_enctype(form) }} id="inviteForm">
    {{ include('RjComponentBundle:Invite:_form.html.twig', {"form": form }) }}
    {{ form_rest(form) }}
    <div class="buttons-box clearfix">
      <div class="buttons left">
        <button type="submit" class="button" id="register"><span>{{ 'add.property'|trans }}</span></button>
        <a href="{{ path('property_add') }}" class="button greyButton left" id="cancel">
          <span>{{ 'cancel'|trans }}</span>
        </a>
      </div>
    </div>
</form>
</section>
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    {{ include('RjComponentBundle:Google:js.html.twig') }}
    {% javascripts  'bundles/bazingajstranslation/js/translator.min.js'
                    '@RjCoreBundle/Resources/public/js/jquery.tmpl.js'
                    '@RjCoreBundle/Resources/public/js/jquery.google.js'
                    '@TenantBundle/Resources/public/js/invite.landlord.js'
                    '@RjPublicBundle/Resources/public/js/jquery-ui.js'
                    '@RjPublicBundle/Resources/public/js/jquery.slimscroll.js'

    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script type="text/javascript" src="{{ url('bazinga_jstranslation_js') }}"></script>
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    {% stylesheets 
        '@CoreBundle/Resources/public/css/styles.css'
        '@CoreBundle/Resources/public/css/pricing-popup.css'
        '@TenantBundle/Resources/public/css/invite.landlord.css'
    %}
      <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
{% endblock %}
