{% extends "TenantBundle::base.html.twig" %}

{% block title "common.applicant.dashboard"|trans %}

{% block content %}
    <div class="column-small floatleft">
        <div class="pod-small pod-border pod-padding shadow">
            <h2>{{ 'settings.title' | trans }}</h2>
            {{ knp_menu_render('TenantBundle:Builder:settingsMenu', { 'template': 'CoreBundle:Menu:user_settings.html.twig' }) }}
        </div>
    </div>
    <div class="column-middle floatright">
        <div class="pod-middle pod-border pod-padding shadow">
        <h1>{{ 'settings.contact_information' | trans }}</h1>
        <div class="row-20"></div>
        {% for flashMessage in app.session.flashbag.get('notice') %}
            <div class="flash-notice">
                {{ flashMessage }}
            </div>
        {% endfor %}
        <form action="{{ path('applicant_contact') }}" method="post" {{ form_enctype(form) }}>
            {{ form_label(form.phone) }}
            {{ form_widget(form.phone_type, { 'attr': {'class': 'cj-select'} }) }}
            {{ form_widget(form.phone) }}
            {{ form_rest(form) }}
            <div class="row-20"></div>
            <input class="button large green" type="submit" name="_submit" value="{{ 'common.update' | trans }}" />
        </form>
        </div>
    </div>
    <div class="clearboth"></div>
{% endblock %}
