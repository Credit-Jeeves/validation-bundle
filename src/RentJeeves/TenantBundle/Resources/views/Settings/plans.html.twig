{% extends "TenantBundle::base.html.twig" %}

{% block title "settings.plans.title"|trans %}


{% block javascripts %}
    {% javascripts  '@TenantBundle/Resources/public/js/CreditTrackPricing.js'
                    '@TenantBundle/Resources/public/js/CreditTrackPayDialog.js'
                    '@TenantBundle/Resources/public/js/CreditTrackCancel.js'
                    '@RjCoreBundle/Resources/public/js/formProcess.js'
    %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {% stylesheets  '@CoreBundle/Resources/public/css/styles.css'
                    '@CoreBundle/Resources/public/css/pricing-popup.css'
                    '@CheckoutBundle/Resources/public/css/checkout.css'
    %}
        <link href="{{ asset_url }}" rel="stylesheet" type="text/css" />
    {% endstylesheets %}
{% endblock %}

{% block content %}
    <div class="column-small floatleft">
        <div class="pod-small pod-border pod-padding shadow">
            <h2>{{ 'settings.title' | trans }}</h2>
            {{ knp_menu_render(app.user.type | capitalize ~ 'Bundle:Builder:settingsMenu', { 'template': '::menu.html.twig' }) }}
        </div>
    </div>
    <div class="column-middle floatright" id="user-addresses-list">
        <div class="pod-middle pod-border pod-padding shadow">
            <h1>{{ 'settings.plans.head' | trans }}</h1>
            <div class="row-20"></div>
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="flash-notice">
                    {{ flashMessage | trans }}
                </div>
            {% endfor %}
            <div class="row-20"></div>
            <div>
                {{ 'settings.plans.comment' | trans }}
            </div>
            <div class="row-20"></div>
            {% for flashMessage in app.session.flashbag.get('notice') %}
                <div class="flash-notice">
                    {{ flashMessage }}
                </div>
            {% endfor %}

            <label class="bold">{{ 'settings.plans.label'|trans }}</label>
            <span id="current-plan">{{ paymentPlan|raw }}</span>

            <div class="row-20"></div>
            <a class="button large add-address-button show-credittrack-pricing-popup" href="#">
                <span>{{ 'settings.plans.update' | trans }}</span>
            </a>
        </div>
    </div>
    <div class="clearboth"></div>


    {{ render(controller('TenantBundle:CreditTrack:pricing')) }}
    {{ render(controller('TenantBundle:CreditTrack:pay')) }}
    {% include('TenantBundle:CreditTrack:cansel.html.twig') %}

{% endblock %}
