<div data-role="page" id="sources">

    <div data-role="panel" id="panelH" class="sideMenu">
        <ul data-role="listview">
            <li><a href="#main" class="menuOptions">Current Payments</a></li>
            <li><a href="#paymentHistory" class="menuOptions"  class="selectedMenuOption">Payment History</a></li>
            <li><a href="logout" class="menuOptions">Logout</a></li>
        </ul>
    </div>

    <div data-role="header" role="banner" class="ui-header ui-bar-inherit" style="">
        <a href="#panelH" class="headerButton" data-role="none"><i class="fa fa-bars" style="background: none; color: white; font-size: 22pt;"></i></a>
        <h1 class="ui-title" role="heading" aria-level="1"><img class="headerLogo" src="/bundles/rjcore/images/mobile/home-logo.png"></h1>
        <a href="#addNewPayAccount" onclick="saving=false" data-role="none" role="button" class="headerButton" style="color: white; border-left: 1px solid white; border-right: 0px; text-shadow: none;">Add</a>
    </div>

    <div class="ui-content" role="main">


        <table class="properties-table zebra-grid contracts-table" id="payment-account-table">
            <thead>
            <tr class="contracts">
                <th class="font-helvetica">{{ 'payment_source' | trans() }}</th>
                <th class="font-helvetica">{{ 'type' | trans() }}</th>
                <th class="font-helvetica">{{ 'expiration' | trans() }}</th>
                <th style="width: 85px;"></th>
            </tr>
            </thead>
            <tbody>
            {% for paymentAccount in paymentAccounts %}
                <tr id="payment-account-row-{{ loop.revindex }}">
                    <td class="font-helvetica">{{ paymentAccount.getName }}</td>
                    <td class="font-helvetica">{{ ('payment_account_' ~ paymentAccount.getType) | trans }}</td>
                    <td class="font-helvetica">
                        {{ paymentAccount.getCcExpiration.format('M Y') | default('N/A') }}
                    </td>
                    <td class="font-helvetica">
                        <a title="{{ 'edit' | trans }}"
                           href="#"
                           onclick="editSource('{{ paymentAccount.getName }}')"
                                >
                            <i class="fa fa-pencil-square-o"></i>
                        </a>
                        <a title="{{ 'delete' | trans }}"
                           href="#"
                           onclick="deleteSource('{{ paymentAccount.getName }}')"
                                >
                            <i class="fa fa-times"></i>
                        </a>
                    </td>

                </tr>
            {% endfor %}
            </tbody>
        </table>


    </div>

</div>